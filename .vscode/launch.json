    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Attach using Process Id",
            "type": "python",
            "request": "attach",
            "processId": 6566
        },
        {
            "name": "RENDER DEBUG",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/run.py",
            "console": "integratedTerminal",
            "args": [
                "--",
                "--store",
                "-d"
            ],
        },
        {
            "name": "REGISTER DEBUG",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/run.py",
            "console": "integratedTerminal",
            "args": [
                "--",
                "--register",
                "-d",
                "--scene_name=name_from_scene",
                "--prefix=collar",
                "--variant=Mao",
                "--configFamily=collar",
                "--material=fabric"
            ],
            "cwd": "C:/Projects/shirtsRender"
        },
        {
            "name": "INIT DEBUG",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/run.py",
            "console": "integratedTerminal",
            "args": [
                "--",
                "-d",
                "-i"
            ],
            "cwd": "C:/Projects/shirtsRender"
        }
    ]
}